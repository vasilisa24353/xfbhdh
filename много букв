// Online C++ compiler to run C++ program online
#include <iostream>
#include <stdio.h>
using namespace std;
int main() {
    int i,j, A[10][10], s=0;
    for(i=1; i<=9; i++)
    {
        for(j=1; j<=9;  j++)
         {
    A[i][j]=i*j;
    cout << A[i][j] << "   ";
    s = s + A[i][j];
}
cout << "\n";
    }
    cout << "\n Средне. ариф. = " << s / 100 << "\n";
    
    for(i=1; i<=9; i++)
    {
        for(j=1; j<=9;  j++)
         {
             if (A[i][j]%2 == 0)
             {
                 A[i][j] = 0;
                 cout << A[i][j] << "  ";
             }
             else
             {
                 A[i][j] = A[i][j] * (-1);
                 cout << A[i][j] << "  ";
             }
        }
cout << "\n";
    }   
    return 0;
}
